@model DienMayQT.Models.KhuModels

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Customer/Views/Shared/_CustomerLayout.cshtml";
}
<!-- Custom styles for this template -->
<link href="~/Content/css/thumbnail-gallery.css" rel="stylesheet">
@foreach (var item in Model.Product.OrderByDescending(i => i.ID))
{
    <h1 class="my-4 text-center text-lg-left">Tìm thấy 
    
    
    @Html.DisplayFor(modelItem => Model.searchNumber)
    <span>Kết quả với "</span>
    @Html.DisplayFor(modelItem => Model.search)
    "</h1>
}


<div class="row text-center text-lg-left">
    @foreach (var item in Model.Product.OrderByDescending(i => i.ID))
    {
            <div class="col-md-3 col-sm-6 mb-4">
                
                <a href="#">
                    <img class="img-fluid" src="@Url.Action("GetImgSrc", new { id = item.ID })" />
                    @Html.DisplayFor(modelItem => item.ProductName) |
                    @Html.ActionLink("Chi Tiết", "Details", new { id = item.ID })
                </a>

                <br>
                @Html.FormatValue(item.SalePrice, "{0:0,0} vnđ")
            </div>
    }

    @if (Model.Product.Count() == 0)
    {
        <h3> Không còn mặt hàng này </h3>
    }

</div>