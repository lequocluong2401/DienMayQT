@model DienMayQT.Models.KhuModels
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Customer/Views/Shared/_CustomerLayout.cshtml";
}
<!-- Custom styles for this template -->
<link href="~/Content/css/portfolio-item.css" rel="stylesheet">
<!-- Portfolio Item Heading -->
<h1 class="my-4">Sản Phẩm Mới</h1>

<!-- Portfolio Item Row -->
<div class="row">

    <div class="col-md-8">
        <img class="img-fluid" src="" alt="">
    </div>

    <div class="col-md-4">
        <h3 class="my-3">Quảng Cáo</h3>
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quae harum incidunt neque, nesciunt aperiam ratione deleniti aliquid, iusto nemo est debitis doloremque natus dolorem obcaecati officia corporis. Architecto sunt, quibusdam.</p>
        <h3 class="my-3">Khuyến Mãi Hiện Có</h3>
        <ul>
            <li>Lorem Ipsum</li>
            <li>Dolor Sit Amet</li>
            <li>Consectetur</li>
            <li>Adipiscing Elit</li>
        </ul>
    </div>

</div>
<!-- /.row -->
<!-- Related Projects Row -->
<h3 class="my-4">Những Mặt Hàng Mới Nhất</h3>
<div class="row">
@foreach (var item in Model.Product.OrderByDescending(i => i.ID))
{ 
    <div class="col-md-3 col-sm-6 mb-4">
        <a href="#">     
            <img  class="img-fluid" src="@Url.Action("GetImgSrc", new { id = item.ID })"/>
            @Html.DisplayFor(modelItem => item.ProductName)
        </a>
        <br>
        @Html.FormatValue(item.SalePrice, "{0:0,0} vnđ")
    </div>
}

</div>
<!-- /.row -->
