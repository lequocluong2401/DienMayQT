@model IEnumerable<DienMayQT.Models.CashBill>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<p>
    <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("Create")'"><i class="fa fa-plus" aria-hidden="true"></i> Thêm mới</button>
</p>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Danh sách Hóa đơn
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Action</th>
                        <th>Bill Code</th>
                        <th>CustomerName</th>
                        <th>Phone Number</th>
                        <th>Address</th>
                        <th>Date</th>
                        <th>Shipper</th>
                        <th>Note</th> 
                        <th>Grand Total</th> 
                        
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Action</th>
                        <th>Bill Code</th>
                        <th>CustomerName</th>
                        <th>Phone Number</th>
                        <th>Address</th>
                        <th>Date</th>
                        <th>Shipper</th>
                        <th>Note</th>
                        <th>Grand Total</th>
                        
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>

                                <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Edit", new { id = item.ID })'"><i class="fa fa-pencil" aria-hidden="true"></i></button><br />
                                <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", new { id = item.ID })'"><i class="fa fa-trash" aria-hidden="true"></i></button>

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.BillCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Shipper)
                            </td>
                            <td>
                               @Html.DisplayFor(modelItem => item.Note)
                            </td>
                            <td>
                                @String.Format("{0:0,0} VND", item.GrandTotal)
                            </td>                          
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>
