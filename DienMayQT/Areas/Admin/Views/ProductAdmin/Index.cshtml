@model IEnumerable<DienMayQT.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}


<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="BangSanPham" class="table table-hover">
    <thead>
        <tr>
            <th>Mã SP</th>
            <th>Tên sản phẩm</th>
            <th>Giá bán</th>
            <th>Giá gốc</th>
            <th>Giá góp</th>
            <th>Tồn</th>
            <th>Loại</th>
            <th>Hình SP</th>
            <th>Stsdsadad</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.ProductCode</td>
            <td>@item.ProductName</td>
            <td>@item.SalePrice.ToString("N0")</td>
            <td>@item.OriginPrice.ToString("N0")</td>
            <td>@item.InstallmentPrice.ToString("N0")</td>
            <td>@item.Quantity.ToString("N0")</td>
            <td>@item.ProductType.ProductTypeName</td>
            <td>
                <img src="@Url.Action("Details", new { id = item.ID })" width="150" height="100" />
            </td>
            <td>
                <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Edit", new { id = item.ID })'"><i class="fa fa-pencil" aria-hidden="true"></i></button>
                <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", new { id = item.ID })'"><i class="fa fa-trash" aria-hidden="true"></i></button>
            </td>

        </tr>
        }
    </tbody>
</table>

@section scripts {
    <link href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#BangSanPham').DataTable();
        });
    </script>
}